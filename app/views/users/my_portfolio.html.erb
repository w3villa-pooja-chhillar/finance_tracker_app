<h1> Hey! This is my portfolio </h1>
<div class = "search">

<h3> Search stocks </h3>
<%= form_tag search_stock_path, remote: true,method: :get do %>
<div class= "form-group row">
<div class= "col-sm-8 no-right-padding">
<%= text_field_tag :stock , params[:stock], placeholder: "Search a stock ticker here", autofocus:true, class: "form-control form-control-lg" %>
</div>
<div class="col-sm-4 no-left-padding">
<%= button_tag type: :submit, class: "btn btn-success" do %>
    <%= fa_icon 'search 2x' %>
    <% end %>
</div>
</div>
<% end %>
</div>

<div id ="results">
</div>