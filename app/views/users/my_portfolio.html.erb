<div class="heading font-italic  welcome">
<h1> <b> Welcome to the portfolio page </b> </h1>
</div>
<div class = "search font-italic">

<h2> <b>Search stocks</b> </h2>
<%= form_tag search_stock_path, remote: true,method: :get do %>
<div class= "form-group row">
<div class= "col-sm-8 no-right-padding">
<%= text_field_tag :stock , params[:stock], placeholder: "Search a stock ticker here", autofocus:true, class: "form-control form-control-lg" %>
</div>
<div class="col-sm-4 no-left-padding">
<%= button_tag type: :submit, class: "btn btn-success" do %>
    <%= fa_icon 'search 2x' %>
    <% end %>
</div>
</div>
<% end %>
</div>

<div id ="results">
</div>
<% if !@tracked_stocks.empty? %>
<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th scope="col">Ticker</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @tracked_stocks.each do|stock| %>
    <tr>
      <th scope="row"><%= stock.ticker.upcase %></th>
      <td><%= stock.name %></td>
      <td><%= stock.last_price%></td>
      <td><%= link_to 'Remove' ,user_stock_path(stock), method: :delete, data: {confirm: "are you sure" } , class: "btn btn-xs btn-warning" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>